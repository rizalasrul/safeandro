<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/cardViewMaterial"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="1dp"
                                    android:clickable="true"
                                    card_view:cardCornerRadius="0dp"
                                    card_view:cardElevation="0dp">

    <!--CONTAINER Start-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/default_padding_10"
            android:paddingBottom="@dimen/default_padding_10"
            android:padding="@dimen/default_padding_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <!--NUMBERING Start-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_number"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font_size_12"
                    android:textStyle="bold"
                    tools:text="1"/>
        </LinearLayout>
        <!--NUMBERING End-->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_5"
                android:layout_marginRight="@dimen/default_margin_16"
                android:layout_weight="1"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="50">

                <TextView
                        android:id="@+id/tvBarcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/default_font_size_14"
                        tools:text="10001"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:layout_weight="50">

                <ImageView
                        android:id="@+id/ivDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--CONTAINER End-->

</android.support.v7.widget.CardView>